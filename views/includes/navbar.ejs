<!-- border bottom:- will show border at bottom -->
<!-- sticky-top:-  to sticked navbar  -->
 <!-- Add this in your CSS file or inside a <style> tag -->
  <style>
  .navbar {
    background-color: #f8f9fa; /* Light background color */
    border-bottom: 1px solid #dee2e6; /* Border at the bottom */
  }
  
  .navbar-brand {
    font-weight: bold; /* Make brand name bold */
    color: #343a40; /* Dark color for brand */
  }

  .navbar-nav .nav-link {
    color: #343a40; /* Dark color for links */
    font-weight: 500; /* Medium weight for links */
  }
  
  .navbar-nav .nav-link:hover {
    color: #007bff; /* Change color on hover */
  }

  .navbar-brand img {
    height: 30px; /* Adjust the logo height if needed */
  }
  
  .navbar .navbar-nav .nav-link {
    padding: 0 15px; /* Add spacing between links */
  }

  .navbar-collapse {
    display: flex;
    justify-content: space-between; /* Space between brand and nav items */
  }
  
  .navbar-collapse .navbar-nav {
    display: flex;
    align-items: center; /* Center align items */
  }

  .navbar-collapse .navbar-nav .ms-auto {
    margin-left: auto; /* Align links to the right */
  }
  
  .navbar-collapse .navbar-nav .nav-item {
    margin-left: 15px; /* Add spacing between nav items */
  }
</style>
<nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings">
      <i class="fa-solid fa-compass"></i> Campus TradeHub
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav me-auto">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">New List</a>
        <% if (!currUser) { %>
        <a class="nav-link" href="/signup"><b>Sign Up</b></a>
        <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
        <% if (currUser) { %>
        <a class="nav-link" href="/logout">Log out: <%= currUser.username %></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
