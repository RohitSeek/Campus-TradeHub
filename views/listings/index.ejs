/* Card styling */
.listing-card {
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  border: none; /* Removes the default border */
  background: linear-gradient(135deg, #d4f2cb 0%, #f1f0ef 100%);
  border-radius: 10px; /* Smooth rounded corners */
  overflow: hidden; /* Prevents content overflow */
}

.listing-card:hover {
  transform: translateY(-8px); /* Lifts the card up slightly */
  box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2); /* Adds a deeper shadow */
}

/* Card image styling */
.card-img-top {
  transition: transform 0.3s ease; /* Smooth image zoom */
  border-top-left-radius: 10px; /* Matches card border radius */
  border-top-right-radius: 10px; /* Matches card border radius */
}

.listing-card:hover .card-img-top {
  transform: scale(1.05); /* Slight zoom on hover */
}

/* Card overlay styling */
.card-img-overlay {
  background: rgba(0, 0, 0, 0.6); /* Dark overlay for text contrast */
  transition: background 0.3s ease; /* Smooth overlay transition */
}

.card-img-overlay h5 {
  font-size: 1.2rem; /* Slightly larger font size */
  font-weight: bold; /* Bold title */
}

/* Button styling */
.btn-sm {
  background-color: #ff6347; /* Custom button color */
  border: none; /* No border */
  transition: background-color 0.3s ease, transform 0.3s ease; /* Smooth hover effects */
}

.btn-sm:hover {
  background-color: #e5533c; /* Darker button color on hover */
  transform: translateY(-2px); /* Lifts the button on hover */
}

/* Remove unwanted shadows */
.listing-card .card-img-top,
.listing-card .card-body,
.listing-card .card-img-overlay {
  box-shadow: none !important; /* Ensures no shadows appear inside the card */
}

/* Responsive layout adjustments */
@media (max-width: 768px) {
  .card-img-top {
    height: 15rem; /* Smaller image height on smaller screens */
  }
}

@media (max-width: 576px) {
  .card-img-top {
    height: 12rem; /* Even smaller image height on extra small screens */
  }
}


</style>

